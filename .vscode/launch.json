{
    "configurations": [       
        {
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/build/zephyr/zephyr.elf",
            "name": "QEMU Cortex M3",
            "request": "attach",
            "type": "cortex-debug",
            "servertype": "qemu",
            "configFiles": [],
            "searchDir": [],
            "showDevDebugOutput": "parsed",
            "gdbPath": "${workspaceRoot}/../zephyr-sdk-0.14.2/arm-zephyr-eabi/bin/arm-zephyr-eabi-gdb.exe",
            "gdbTarget": ":1234",
            "serverpath": "C:/Program Files/qemu/qemu-system-arm.exe",
        },
        {
            "type": "gdb",
            "request": "attach",
            "name": "Attach to gdbserver",
            "executable": "${workspaceRoot}/build/zephyr/zephyr.elf",
            "target": ":1234",
            "remote": true,
            "cwd": "${workspaceRoot}",
            "valuesFormatting": "parseText",
            "gdbpath": "${workspaceRoot}/../zephyr-sdk-0.14.2/arm-zephyr-eabi/bin/arm-zephyr-eabi-gdb.exe",
            "autorun": [],
            "stopAtConnect": true
        }
    ]
